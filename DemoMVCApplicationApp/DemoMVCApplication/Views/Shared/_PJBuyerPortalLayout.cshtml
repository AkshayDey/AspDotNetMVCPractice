                <div class="spinner diagonal part-2"></div>
            </label>

            <div id="sidebarMenu">
                <ul class="sidebarMenuInner" style="margin-top: 120px;">
                    @if (Session["MenuList"] != null)
                    {
                        @*var lstMenu = Session["MenuList"] as IEnumerable<DemoMVCApplication.Models.MenuName>;
                        foreach (var menu in lstMenu)
                        {
                            <li><a href="@menu.MenuControl"><i class="@menu.CSSClass"></i> @menu.MenuName1</a></li>
