                            {
                                <li><a href="@Url.Action("ProductUploadIndex", "User")"><i class="fa fa-truck"></i> Product List</a></li>
                            }
                        }*@
                    <li><a href="@Url.Action("UserLogin", "User")" style="color: #ca4d4d"><i class="fa fa-lock"></i> Logout</a></li>
                </ul>
            </div>
        }
    <div class="row-container">      
        <img src="~/Content/ThemeBuyerPortalAssets/img/unnamed.png" width="150" height="150" class="pull-left" />
    </div>
    </div>
